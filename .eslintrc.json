{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["rallycoding","eslint:recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies":"off",
        "global-require":"off",
        "react/prop-types":"off",
        "import/no-unresolved":"off",
        "max-len":"off",
        "no-underscore-dangle":"off",
        "import/no-named-as-default":"off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}