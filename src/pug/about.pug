                    +bar('Mongo DB', 'img/mongo.png', 'seventy')
                    +bar('React', 'img/react.svg', 'eighty')
                    +bar('Redux', 'img/redux.svg', 'seventy')
                    +bar('Sass', 'img/sass.svg', 'sixty')
